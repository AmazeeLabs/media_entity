<?php


/**
 * Implements hook_permission().
 */
function media_entity_permission() {
  $perms = array(
    'administer media' => array(
      'title' => t('Administer media'),
      'restrict access' => TRUE,
    ),
    'view media' => array(
      'title' => t('View media'),
    ),
    'update media' => array(
      'title' => t('Update media'),
    ),
    'delete media' => array(
      'title' => t('Delete media'),
    ),
    'create media' => array(
      'title' => t('Create media'),
    ),
  );

  return $perms;
}

/**
 * Entity URI callback.
 *
 * @param \Drupal\media_entity\MediaInterface $media
 *   A media entity.
 *
 * @return array
 *   Route information array.
 */
function media_entity_uri(\Drupal\media_entity\MediaInterface $media) {
  return array(
    'route_name' => 'media.view',
    'route_parameters' => array(
      'media' => $media->id(),
    ),
  );
}
